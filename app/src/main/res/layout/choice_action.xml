<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        android:id="@+id/layout_soryby"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="56dp"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        >
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/close"
                android:layout_marginTop="5dp"
                android:layout_weight="4"
                android:layout_gravity="left"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                app:srcCompat="@drawable/ic_baseline_close_24"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choice Action"
                android:textSize="20sp"
                android:textColor="@color/deep_teal"/>

            <TextView
                android:id="@+id/save"
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:textSize="20sp"
                android:textColor="@color/deep_teal"/>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/totalPenyebaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Penyebaran Kasus : "
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Poin"
                android:id="@+id/poinChanges"
                android:layout_marginBottom="20dp"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sosialisasi"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/plusSosialisasi"
                    android:text="+"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/skorSosilisasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="30sp"/>
                <Button
                    android:id="@+id/minusSosilisasi"
                    android:text="-"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preventif"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    android:textSize="18sp"/>

                <Button
                    android:id="@+id/plusPreventif"
                    android:text="+"
                    android:textSize="25sp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/skorPreventif"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="30sp"/>
                <Button
                    android:id="@+id/minusPreventif"
                    android:text="-"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fogging"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:textSize="18sp"/>

                    <Button
                        android:id="@+id/plusFogging"
                        android:text="+"
                        android:textSize="25sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/skorFogging"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textSize="30sp"/>
                    <Button
                        android:id="@+id/minusFogging"
                        android:text="-"
                        android:textSize="25sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>